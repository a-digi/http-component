{
  "name": "a-digi/http-component",
  "description": "AriAva HTTP component.",
  "authors": [
    {
      "name": "Andet Tafa",
      "email": "tafa.andet@googlemail.com"
    }
  ],
  "type": "library",
  "version": "1.0.0",
  "license": "MIT",
  "minimum-stability": "stable",
  "prefer-stable": false,
  "autoload": {
    "psr-4": {
      "AriAva\\Http\\": "src/"
    }
  },
  "require": {
    "php": ">=8.2",
    "ext-ctype": "*",
    "a-digi/dependency-injection": "1.0.0",
    "psr/http-message": "^2.0"
  },
  "require-dev": {
    "phpstan/phpstan": "^2.1",
    "friendsofphp/php-cs-fixer": "^3.68"
  },
  "scripts": {
    "phpstan": "php vendor/bin/phpstan analyse --configuration=phpstan.neon",
    "cs-fix": "php vendor/friendsofphp/php-cs-fixer/php-cs-fixer fix --config=./php_cs.php"
  }
}
